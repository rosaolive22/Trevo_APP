<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.produtos.ProdutoFragment">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/green"
            android:scaleType="centerCrop"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/capa">

            <!-- Conteúdo do 1° CardView -->


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/bloco_produto2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">
                <!-- Conteúdo do 2° CardView -->


                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Lista de Produtos-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/txtProduto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </androidx.core.widget.NestedScrollView>


            </androidx.cardview.widget.CardView>



        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/capa"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/capa"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            />

</androidx.constraintlayout.widget.ConstraintLayout>
